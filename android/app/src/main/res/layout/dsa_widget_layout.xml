<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Title -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DSA Topic"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingBottom="6dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Scrollable Content using ListView -->
    <ListView
        android:id="@+id/widget_content_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@android:color/white"
        android:scrollbarSize="6dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:clipToPadding="false" />

    <!-- Navigation buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/widget_button_previous"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="◀ Previous"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5E35B1"
            style="?android:attr/buttonBarButtonStyle" />

        <TextView
            android:id="@+id/widget_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 19"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <Button
            android:id="@+id/widget_button_next"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Next ▶"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5E35B1"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</LinearLayout>
